<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:colorPrimary">@color/primary_bg</item>
        <!--   darker variant for the status bar and contextual app bars -->
        <item name="android:colorPrimaryDark">@color/primary_dark</item>
        <!--   theme UI controls like checkboxes and text fields -->
        <item name="android:colorAccent">@color/primary_text</item>
        <item name="android:windowBackground">@color/primary_bg</item>
        <item name="android:colorBackground">@color/primary_bg</item>
        <item name="android:textColorPrimary">#ffffff</item>
    </style>
</resources>
